
<%= form_for @campaign do |f| %>
	<% if @campaign && @campaign.errors.any? %>
		<div class="errors">
			<h2><%= pluralize(@campaign.errors.count, "error") %> in your application:</h2>
			<ul>
			<% @campaign.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
			</ul>
		</div>
	<% end %>

	<div>
		<%= f.label :title %>
		<%= f.text_field :title %>
	</div>

	<div>
		<%= f.label :body %>
		<%= f.text_area :body %>
		<div id="editable"></div>
	</div>

	<div>
		<%= f.label :tag_list %>
		
		<%= f.select :category_ids, Category.all.collect {|x| [x.name, x.id]}, {}, :multiple => true %>
	</div>

	<% if !logged_in? %>
		<%= render 'users/new' %>
	<% end %>

	<%= f.submit %>
<% end %>