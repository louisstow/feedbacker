<h2>Change Password</h2>

<%= form_tag '/change-password', method: :post do %>
<p>
	<%= label_tag :password, "Old Password" %>
	<%= password_field_tag :password %>
</p>

<p>
	<%= label_tag :new_password, "New Password" %>
	<%= password_field_tag :new_password %>
</p>

<p>
	<%= submit_tag "Change" %>
</p>
<% end %>