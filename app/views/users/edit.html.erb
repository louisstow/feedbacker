<h2>Account Settings</h2>

<%= form_for @user do |f| %>

<% if @user && @user.errors.any? %>
	<div class="errors">
		<h2><%= pluralize(@user.errors.count, "error") %> in your application:</h2>
		<ul>
		<% @user.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
		</ul>
	</div>
<% end %>

<p>
	<%= f.label :full_name %>
	<%= f.text_field :full_name %>
</p>

<p>
	<%= f.label :email %>
	<%= f.text_field :email %>
</p>


<p>
	<%= f.label :bio %>
	<%= f.text_area :bio %>
</p>

<%= f.submit %>
<% end %>